<div class="container">

      <!-- Three columns of text below the carousel -->
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4 login-box text-center">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
          <%= devise_error_messages! %>
            <h3 class="into-title">Edit <%= resource_name.to_s.humanize %></h3>

              <div class="col-sm-12 form-group input-group login-padding">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <%= f.text_field :username , autofocus: true, class: 'form-control', placeholder: 'User' %>
              </div>

              <div class="col-sm-12 form-group input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <%= f.text_field :email, class: 'form-control', placeholder: 'e-mail' %>
              </div>
              
              <div class="col-sm-12 form-group input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
                <%= f.file_field :user_avatar, class: 'form-control', placeholder: 'avatar' %>
              </div>

              <div>
                <div class="col-sm-12 form-group input-group">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
                </div>
                <p class="help-block">(leave blank if you don't want to change it)</p>
              </div>

              <div class="col-sm-12 form-group input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Password Confirmation' %>
              </div>

              <div class="col-sm-12 form-group input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Current Password' %>
              </div>
              <p class="help-block">(we need your current password to confirm your changes)</p>

              <div class="login-botons">
                <%= link_to "Back Home", root_path, class: "btn btn-default btn-lg" %>
                <!-- <a href="index.html" class="btn btn-default btn-lg">Back Home</a> -->
                <%= f.submit "Update", class: 'btn btn-success btn-lg' %><br/>
                <%#button type="submit" class="btn btn-success btn-lg">Log In</button> %>
              </div>
            <% end %>
            <div>
              <h3>Unhappy?</h3>
                <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-warning btn-lg"%>
            </div>
        </div><!-- /.col-lg-4 -->
      </div><!-- /.row -->
    </div><!-- /.container -->

    <div class="container-fluid">
      <!-- /END THE FEATURETTES -->     
      <div class="edit-hulk"></div>
      <!-- FOOTER -->
    </div>

    <!-- Placed at the end of the document so the pages load faster -->
    <!--link href="css/style.css" rel="stylesheet" -->
    
    <script>
      wow = new WOW(
        {
          offset:       200          // default
        }
      )
      new WOW().init();
    </script>