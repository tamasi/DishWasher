<div class="container">

  <!-- Three columns of text below the carousel -->
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 login-box text-center">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
        <h3 class="into-title">Forgot your password?</h3>
          <div class="col-sm-12 form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'e-mail' %>
            <%#input class="form-control" type="text" placeholder="User" id="date1"> %>
          </div>
          <div class="login-botons">
            <!-- <a href="index.html" class="btn btn-default btn-lg">Back Home</a> -->
            <%= f.submit "Send me reset password instructions", class: 'btn btn-success btn-lg' %><br/>
          </div>
          <div class="login-botons">
            <%= link_to "Back Home", root_path, class: "btn btn-default btn-lg" %>
          </div>
        <% end %>
            <%= render "devise/shared/links" %>
    </div><!-- /.col-lg-4 -->
  </div><!-- /.row -->
</div><!-- /.container -->

<div class="container-fluid">
  <!-- /END THE FEATURETTES -->     
  <div class="login-hulk"></div>
  <!-- FOOTER -->
</div>

